{
  "name": "hangyout-backend",
  "version": "0.0.1",
  "description": "a WebAPI backend",
  "author": "https://github.com/ddbdzung",
  "private": true,
  "license": "MIT License",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:prod": "cross-env NODE_ENV=production nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod-build": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@faker-js/faker": "^8.0.2",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/cache-manager": "^2.0.1",
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.4.3",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/throttler": "^4.2.1",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.3",
    "cache-manager-redis-yet": "^4.1.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "csrf-csrf": "^2.2.4",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "luxon": "^3.3.0",
    "module-alias": "^2.2.3",
    "mongoose": "^7.3.1",
    "nest-winston": "^1.9.3",
    "nestjs-i18n": "^10.2.6",
    "nestjs-throttler-storage-redis": "^0.3.3",
    "nodemailer": "^6.9.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.1",
    "@types/luxon": "^3.3.0",
    "@types/node": "18.16.12",
    "@types/nodemailer": "^6.4.8",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "mongodb": "^5.7.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "_moduleAliases": {
    "@/modules": "dist/modules",
    "@/i18n": "dist/i18n",
    "@/common": "dist/common",
    "@/config": "dist/config",
    "@/constants": "dist/constants",
    "@/interfaces": "dist/interfaces",
    "@/utils": "dist/utils",
    "@/global": "dist/global",
    "@/templates": "dist/templates"
  },
  "pnpm": {
    "overrides": {
      "semver@<7.5.2": ">=7.5.2"
    }
  },
  "engines": {
    "node": ">=18.16.1"
  }
}
